<div class="text-center">

    <!-- Content Header (Page header) -->
    <div class="content-header" style="">
        <input type="hidden" id="page" name="page" value="0" />
        <div class="container-fluid">
            <div class="row" style="display:flex;border: 1px solid #cccccc;border-radius: 5px; padding: 0 5px 5px;">
                <div class="col-sm-4" style="text-align:left;important;">
                    <span class="brand-link"> <img src="~/images/logo.png" alt="Logo" class="brand-image" style="opacity:1;height:120%;width:120%;"> </span>
                </div><!-- /.col -->
                <div class="col-sm-4" style="display: flex; align-items: flex-end; justify-content: flex-end;">
                    <strong><span class="" style="font-size:16px;" id="liveTime"></span></strong>
                </div>
            </div><!-- /.row -->
            <div class="clear"></div>



            <div class="row" style="display:flex;padding-top:10px;">
                <div class="col-sm-3">
                    <button type="button" class="btn btn-warning btn-block" id="alarmButton" onclick="">Alarm</button>
                </div>
                <div class="col-sm-3">
                    <button type="button" id="toggleBitButton" class="btn btn-success btn-block" onclick="">Turn On Led</button>
                </div>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtAlarm" placeholder="Value 1" onchange="ringAlarm()">
                </div>
            </div>

            <div class="row col-sm-3" style="display:flex; margin-top: 20px; text-align:left;gap: 5px;">
                <div class="col-sm-6" style="background-color:yellow;">
                    <strong>Modbus Value:</strong> <span id="modbusValueDisplay">N/A</span>
                </div>
                <div class="col-sm-6" style="background-color:red; padding-left: 5px;gap:5px;">
                    <strong>Alarm Threshold:</strong> <span id="alarmThresholdDisplay">N/A</span>
                </div>
            </div>


        </div><!-- /.container-fluid -->
    </div>

</div>



