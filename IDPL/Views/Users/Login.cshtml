@*@model Core.Entity.ResetPass
@using Shiksha.Resources*@

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>@ViewData["Title"] - IDPL</title>

    @* <link rel="shortcut icon" href="~/images/favicon.ico"> *@
    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bbootstrap 4 -->
    <link href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet">
    <!-- Theme style -->
    <link href="~/plugins/AdminLTE/css/AdminLTE.min.css" rel="stylesheet">
    <!-- overlayScrollbars -->
    <link href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet">
    <!-- Custom style -->
    @*<link href="~/css/site.css" rel="stylesheet" />*@
    <script>
        var custDateTimeCSS = new Date().getTime();
        document.write("<link href=\"/css/site.css?v=" + custDateTimeCSS + "\" rel='stylesheet' type='text/css' />");
    </script>

</head>
<body class="hold-transition login-page">
    <div id="divLoginMsg" class="login-box box">
        <!-- /.login-box -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="login-logo">
                    <span style="display: inline-block;"><img src="~/images/logo.png" alt="Logo" class="login-logo-cust" style="width: 300px; height: auto;" /></span>
                </div>
                <p class="login-box-msg">Sign in to start your session</p>

                <form action="/Users/Login" id="frmLogin" method="post">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" data-val="true" data-val-required="The Email field is required." id="txtUserName" name="txtUserName" placeholder="Email Address">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input class="form-control" data-val="true" data-val-required="The Password field is required." id="txtPassword" name="txtPassword" maxlength="30" placeholder="Password" type="password" onkeydown="CallEnter(event, 'btnSubmit')">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="display: flex; align-items: center;">
                        <!-- <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        /.col -->
                        <div class="col-4">
                            <button type="button" onclick="SubmitLogin()" class="btn btn-primary btn-block" onkeydown="CallEnter(event, 'btnSubmit')" id="btnSubmit" name="btnSubmit" value="login">Login</button>
                        </div>
                        <div class="col-8" style="text-align: right;">
                            <a style="  color: #f4c11e; font-size: 14px; padding: 5px 0px; cursor: pointer;" onclick="showFP('FPLink')">Forgot Password</a>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
        <!-- /.login-box -->
        <div class="clearfix"></div>
    </div>
    <div style="position: absolute; left: 10px; bottom: 10px; color: #999999; font-size: 13px;">V0.0.01-0001   Copyright © IDPL 2024</div>
    <!-- jQuery -->
    <script src="~/js/jquery-2.1.3.js" type="text/javascript"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Dialogs //Custom JS BS3 to BS4 -->
    <script src="~/plugins/bs4/bootstrap-dialog.min.js"></script>
    <script src="~/plugins/bs4/bootstrap-dialog-custom-bs4.js"></script>
    <!-- Validate -->
    <script src="~/js/jquery.validate.js" type="text/javascript"></script>
    <script src="~/js/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/plugins/AdminLTE/js/AdminLTE.min.js"></script>
    <!-- Global Strings - Content -->
    <script src="~/js/global.js"></script>
    <!-- Common functions -->
    <script src="~/js/common.js"></script>
    <!-- Login -->
    <script src="~/js/login.js"></script>

    <script id="scriptLoader" type="application/htmlMessage">
        <div class="overlay"></div>
        <div class="loading-img"></div>
    </script>
    <script id="scriptLoaderSmall" type="application/htmlMessage">
        <div class="overlay"></div>
        <div class="loading-img-small"></div>
    </script>
    <script id="scriptAlert" type="application/htmlMessage">
        <div class="alert alert-[[CLASS]] alert-dismissable" style="margin-left: 0px;">
            <!--<i class="fa fa-[[ICON]]"></i>-->
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            [[MESSAGE]]
        </div>
    </script>



    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-J07EDEL2BD"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-J07EDEL2BD');
    </script>

    
</body>
</html>